@import 'var.styl'

*
    box-sizing: border-box
    margin 0
    padding 0
body
    fontR(18px)
    overflow-x: hidden
    min-width: 340px

@media screen and (min-width 1024px)
    h1
        fontC(78px, true)
    h2
        fontC(48px, true)
        margin-bottom 60px
@media screen and (max-width 1024px) and (min-width 768px)
    h1
        fontC(58px, true)
    h2
        fontC(36px, true)
        margin-bottom 60px
@media screen and (max-width 768px)
    h1
        fontC(36px, true)
    h2
        fontC(28px, true)
        margin-bottom 60px

a
    text-decoration: none
    cursor: pointer
b
    fontB(inherit)

.k-container
    max-width: 1240px
    margin: 0 auto
    padding-left 20px
    padding-right 20px

// HEADER
.k-header
    background: #181818
    &.k-header_index
        position: absolute
        top: 0
        left 0
        right: 0
        z-index: 1
        background: unset
    .k-container{}
    .k-header-top
        position relative
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding 26px 0 24px
        border-bottom: 1px solid rgba(255, 255, 255, 0.3)
    .k-header-phone
        display: none
        padding 16px 24px
        color #fff
        border: 1px solid #fff
        font(16px)
        transition: color .25s, background .25s
        &:hover
            color #000
            background: #fff
    .k-header-logo
        display: inline-block
        width 157px
        height auto
        img
            width inherit
            height inherit
    .k-header-links
        display: flex
        gap 28px
    .k-header-link
        width 24px
        height 24px
    .k-header-links-btn
        position relative
        align-items: center
        justify-content: center
        padding 24px 0
        border-bottom: 1px solid rgba(255, 255, 255, 0.3)
        font(16px, true)
        color #fff
        img
            margin-right 10px
    .k-header-bottom
        align-items: center
        justify-content: center
        padding 24px 0
        border-bottom: 1px solid rgba(255, 255, 255, 0.3)
        .k-header-page
            font(16px, true)
            color #fff

    @media screen and (min-width 801px)
        .k-header-logo
            position absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
        .k-header-phone
            display: inline-block
        .k-header-link-phone
            display: none
        .k-header-links-btn
            display: none
        .k-header-bottom
            gap: 40px
            display: flex

    @media screen and (max-width 801px)
        .k-header-links-btn
            display: flex
        .k-header-bottom
            display: flex
            flex-direction: column;
            position: absolute;
            left: 20px
            right: 20px
            gap: 22px;
            top: 100%;
            background: #181818;
            opacity: 0.98;
            transition: max-height 0.25s, padding 0.25s;
            overflow: hidden
            max-height: 0
            padding 0
            &__active
                max-height: 200px
                padding: 24px 0;

    @media screen and (max-width 430px)
        .k-header-top
            flex-direction: column
            gap 20px
        .k-header-links
            justify-content: space-around;
            width: 100%;
            gap unset

// HERO
.k-hero
    background-image: url('../img/heroBack.png');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center
    .k-container
        position relative
        height 100%
    .k-hero-block{}
    .k-hero-title
        color #fff
    .k-hero-text
        color #fff
        max-width: 580px
    @media screen and (min-width 1000px)
        .k-hero-block
            padding-top 27.5%
            padding-bottom 11.5%
        .k-hero-text
            margin-top 40px
    @media screen and (max-width 1000px)
        .k-hero-block
            padding-top 278px
            padding-bottom 90px
        .k-hero-text
            font(16px)
            margin-top 20px
            

// FOOTER
.k-footer
    background: #181818
    color #fff
    a
        color #fff
    .k-container
        position relative
        display: grid
        grid-template-columns: 1.3fr 1fr 1fr 1fr
        @media screen and (min-width 1024px)
            margin-top 180px
            padding-top 100px
            padding-bottom 126px
        @media screen and (max-width 1024px)
            margin-top 64px
            padding-top 60px
            padding-bottom 80px

    .k-footer-logo
        max-width: 154px
        height auto
        img
            max-width: 154px
            width 100%
            height auto

    .k-footer-ul
        list-style none
        padding-left 0
        li
            padding: 4px 0
            font(16px)
        li.k-footer-ul-title
            padding 0
            text-transform: uppercase
            opacity 0.5
            margin-bottom 16px

    .k-footer-mess
        max-width: 242px
        fontB(16px)

    .k-footer-copy
        position absolute
        left 20px
        bottom 10px
        font(12px)
        opacity 0.3
        color #fff

    @media screen and (max-width 1100px)
        .k-container
            grid-template-columns: 1fr 1fr
            grid-row-gap: 30px;
        .k-footer-logo
            grid-row: 1/2;
            grid-column: 1/5;
        .k-footer-mess
            max-width: unset
            grid-row: 2/3;
            grid-column: 1/5;
            margin-bottom: 6px;
    @media screen and (max-width 460px)
        .k-container
            grid-template-columns: 1fr
        .k-footer-ul
            grid-column: 1;
            