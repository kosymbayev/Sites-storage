@import 'var.styl'

// ADVANTAGES
.k-advantages
    background: #181818
    .k-container{}
    h2
        color #fff
    .k-advantages-block
        display: flex
    .k-advantages-item
        flex: 1;
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        padding 14px
        color #fff
        border-left 1px solid #fff
        &:last-child
            border-right 1px solid #fff
        img
            width 100px
            height 100px
            margin-bottom 20px
    .k-advantages-item-text
        text-align: center

    .k-container
        @media screen and (min-width 1024px)
            padding-top 180px
            padding-bottom 180px
        @media screen and (max-width 1024px)
            padding-top 64px
            padding-bottom 64px

    @media screen and (max-width 1024px) and (min-width 601px)
        .k-advantages-block
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-row-gap: 14px;
        .k-advantages-item
            &:nth-child(1)
                grid-column: 1/3;
            &:nth-child(2)
                grid-column: 3/5;
                border-right: 1px solid #fff;
            &:nth-child(3)
                grid-column: 2/4;

    @media screen and (max-width 601px)
        .k-advantages-block
            display: flex
            flex-direction: column
        .k-advantages-item
            border-left: 1px solid #fff;
            border-right: 1px solid #fff;
            img
                margin-bottom 10px
