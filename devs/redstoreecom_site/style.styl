grey_color = #555
red_color = #ff523b
orange_color = #ffd6d6

*
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'Poppins', sans-serif
a
    text-decoration none
    color grey_color

p
    color grey_color

h4
    color grey_color
    font-weight normal

.title
    text-align center
    margin 0 auto 40px
    position relative
    line-height 60px
    color grey_color
    &:after
        content ''
        position absolute
        bottom 0
        left 50%
        width 80px
        height 5px
        background red_color
        border-radius 5px
        transform translateX(-50%)

.container
    max-width 1300px
    margin auto
    padding-left 25px
    padding-right 25px

.small_container
    max-width 1080px
    margin auto
    padding-left 25px
    padding-right 25px

.btn
    display inline-block
    background red_color
    color #fff
    padding 8px 30px
    margin 30px 0
    border-radius 30px
    transition background 0.5s
    &:hover
        background #563434

// COLUMNS
.row
    display flex
    align-items center
    flex-wrap wrap
    justify-content space-around
.col-2
    flex-basis 50%
    min-width 300px
.col-3 
    flex-basis 30%
    min-width 250px
.col-4
    flex-basis 25%
    min-width 200px
    
@media only screen and (max-width 600px)
    .row
        text-align center
    .col-2
    .col-3
    .col-4
        flex-basis 100%

// HEADER
.main_header
    background radial-gradient(#fff, orange_color)
    .row
        margin-top 70px

.navbar 
    display flex
    align-items center
    padding 20px
    nav
        flex 1
        text-align right
    ul
        display inline-block
        list-style-type none
        overflow hidden
        transition max-height 0.5s
    li
        display inline-block
        margin-right 20px

.menu_icon
    display block
    width 20px
    margin-left 20px
    cursor pointer

@media only screen and (min-width 801px)
    .navbar nav ul
        max-height unset !important
    .menu_icon
        display none
@media only screen and (max-width 800px)
    .navbar nav ul
        position absolute
        top 70px
        left 0
        background #333
        width 100%
        li
            display block
            margin-right 50px
            margin-top 10px
            margin-bottom 10px
            a
                color #fff

// MAIN
.col-2
    img
        max-width 100%
        padding 50px 0
    h1
        font-size 50px
        line-height 60px
        margin 25px 0

// CATEGORIES
.categories
    margin 70px 0 0

.col-3 
    margin-bottom 30px
    img
        width 100%

// PRODUCTS
.col-4
    padding 10px
    margin-bottom 50px
    transition transform 0.5s
    &:hover
        transform translateY(-5px)
    img
        width 100%
    p
        font-size 14px

.rating .fa
    color red_color

// OFFER
.offer
    background radial-gradient(#fff, orange_color)
    margin-top 80px
    padding 30px 0

.col-2 .offer_img
    padding 50px

small
    color grey_color

// TESTIMONIAL
.testimonial
    padding-top 100px
    .col-3
        text-align center
        padding 40px 20px
        box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.1)
        cursor pointer
        transition transform 0.5s
        &:hover
            transform translateY(-10px)
        h3
            font-weight 600
            color grey_color
            font-size 16px 
        p
            font-size 12px
            margin 12px 0
            color #777
    img
        width 50px
        margin-top 20px
        border-radius 50%
.fa.fa-quote-left
    font-size 34px
    color red_color

// BRANDS
.brands
    margin 100px auto

.col-5
    width 160px
    img
        width 100%
        cursor pointer
        filter grayscale(100%)
        &:hover
            filter grayscale(0)

// FOOTER
.footer
    background #000
    color #8a8a8a
    font-size 14px
    padding 60px 0 20px
    p
        color #8a8a8a
    h3
        color #fff
        margin-bottom 20px

    .footer-col-1
    .footer-col-2
    .footer-col-3
    .footer-col-4
        min-width 250px
        margin-bottom 20px

    .footer-col-1
        flex-basis 30%
    .footer-col-2
        flex 1
        text-align center
        img
            width 180px
            margin-bottom 20px
    .footer-col-3
    .footer-col-4
        flex-basis 12%
        text-align center
    ul
        list-style-type none
    .app_logo
        margin-top 20px
        img
            width 140px

    hr
        border none
        background #b5b5b5
        height 1px
        margin 20px 0
    .copyright
        text-align center

// PRODUCTS PAGE ----------------------------------------------------------------------
// ALL PRODUCTS
.row-2
    justify-content space-between
    margin 50px auto 20px

select
    border 1px solid red_color
    padding 5px
    &:focus
        outline none

.page_btn 
    margin 0 auto 80px
    span
        display inline-block
        border 1px solid red_color
        margin-left 10px
        width 40px
        height 40px
        text-align center
        line-height 40px
        cursor pointer
        &:hover
            background red_color
            color #fff

// PRODUCT DETAIL ----------------------------------------------------------------------
.single_product
    margin-top 30px
    .col-2 
        padding 20px
        img
            padding 0
    h4
        margin 20px 0
        font-size 22px
        font-weight bold
    select
        display block
        padding 10px
        margin-top 20px
    input
        width 50px
        height 40px
        padding-left 10px
        font-size 20px
        margin-right 10px
        border 1px solid red_color
        &:focus
            outline none
    .fa
        color red_color
        margin-left 10px

    .small_img-row
        display flex
        justify-content space-between
    .small_img-col
        flex-basis 24%
        cursor pointer

@media only screen and (max-width: 600px)
    .single_product 
        .row
            text-align left
        .col-2
            padding 20px 0
        h1
            font-size 26px
            line-height 32px

// CART ----------------------------------------------------------------------
.cart_page
    margin 30px auto
    table
        width 100%
        border-collapse collapse
    th
        text-align left
        padding 5px
        color #fff
        background red_color
        font-weight normal
    td
        padding 10px 5px
        input
            width 40px
            height 30px
            padding 5px
        a.remove
            color red_color
            font-size 12px
        img
            width 80px
            height 80px
            margin-right 10px

    .cart_info
        display flex
        flex-wrap wrap

    .total_price
        display flex
        justify-content flex-end
        table
            border-top 3px solid red_color
            width 100%
            max-width 400px
    td
    th
        &:last-child
            text-align right
                
@media only screen and (max-width: 600px)
    .cart_info p
        display none

// ACCOUNT ----------------------------------------------------------------------
.account_page
    padding 50px 0
    background radial-gradient(#fff, orange_color)
    .form_container
        position relative
        width 300px
        height 400px
        margin auto
        padding 20px 0
        text-align center
        background #fff
        overflow hidden
        box-shadow 0 0 20px 0 rgba(0,0,0,0.1)
        span
            display inline-block
            width 100px
            padding 0 10px
            color grey_color
            font-weight bold
            cursor pointer

    .form_btn
        display inline-block

    form
        position absolute
        top 130px
        padding 0 20px
        max-width 300px
        transition transform 1s
    #loginForm
        left -300px
    #regForm
        left 0

    input
        width 100%
        height 30px
        margin 10px 0
        padding 0 10px
        border 1px solid #ccc

    a
        font-size 12px
    
    .btn
        width 100%
        border none
        cursor pointer
        margin 10px 0
        &:focus
            outline none
    
    #indicator
        width 100px
        border none
        background red_color 
        height 3px
        margin-top 8px
        transform translateX(100px)
        transition transform 1s